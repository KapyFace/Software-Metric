public class ExceptionCalculadora extends Exception {

    public ExceptionCalculadora(String message) {
        super(message);
    }

    public ExceptionCalculadora erroAoDividirPorZero() {
        return new ExceptionCalculadora("Nao posso divir por zero");
    }
    
    public ExceptionCalculadora erroAoUsarInteiro() {
        return new ExceptionCalculadora("Esta calculadora sรณ utiliza de numeros naturais");
    }

}
